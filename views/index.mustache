<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="./css/main.css">
    <title>To Do List</title>
</head>

<body>
    <form action="/toDoList" method="POST">
        <input type="text" name="item" placeholder="Add a todo..." />
        <button value="sumbit">Add todo</button>
    </form>
    <p>To Do List:</p>
    {{#todos}} {{^is_complete}}
    <div>
        <form action="/completed" method="POST">
            <button type="submit" class="mark-task" name="item" value="{{item}}">Mark as Complete</button>
        </form>

        <p>{{item}}</p><button onclick="toggleVisible(display_{{id}});">Edit</button>
        <div id="display_{{id}}" style="visibility: hidden;">
            <form action="/edit/{{id}}" method="POST">
                <input class="task" value="{{item}}" name="item"><button type="sumbit" onclick="toggleHidden(display_{{id}})">Done</button>
            </form>
        </div>
        <form action="/deleteOne" method="POST">
            <button name="item" value="{{item}}">Delete</button>
        </form>
    </div>
    {{/is_complete}} {{/todos}}
    <p class="completed-list">Completed Tasks:</p>
    <form action="/delete" method="POST">
        <button type="submit" name="item" value="{{item}}">Clear</button>
    </form>
    {{#todos}} {{#is_complete}}
    <p>{{item}}</p>
    {{/is_complete}} {{/todos}}

    <script>
        function toggleVisible(x) {
            x.style.visibility = 'visible';
        }
        function toggleHidden(x) {
            x.style.visibility = 'hidden';
        }
    </script>
</body>

</html>